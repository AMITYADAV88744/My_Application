<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:id="@+id/drawer"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".ProfilePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/navbar"/>

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="211dp"
            android:layout_height="154dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/logo" />

        <TextView

            android:id="@+id/pofile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="170dp"
            />


        <TextView
            android:ems="10"
            android:id="@+id/pofile_mail"
            android:layout_width="395dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_action_mail"
            android:text="  Email"
            android:textSize="25sp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/pofile_mob"
            android:layout_width="395dp"
            android:layout_height="50dp"
            android:text="  Mobile"
            android:ems="10"
            android:textSize="25sp"
            android:drawableLeft="@drawable/ic_action_mob"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="10dp" />



        <TextView
            android:id="@+id/pofile_add"
            android:layout_width="395dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_action_hom"
            android:ems="10"
            android:textSize="25sp"
            android:text="  Address"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/pofile_link"
            android:layout_width="395dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_action_link"
            android:text="   url"
            android:textSize="25sp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/sign_out"
            android:layout_width="119dp"
            android:layout_height="48dp"
            android:text="LogOut"
            android:textSize="20sp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="600dp"
            />



    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/nav_head"
        android:layout_width="200dp"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:itemTextColor="@color/black"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start" />


</androidx.drawerlayout.widget.DrawerLayout>
